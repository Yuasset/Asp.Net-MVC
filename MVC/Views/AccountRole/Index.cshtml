@model List<AppUserRole>
@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                <label>ID</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Description</label>
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count > 0) // Modelin içinde veri var mı kontrolü yoksa hata almamak için if bloğu kullanıldı
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>@item.Id</label>
                    </td>
                    <td>
                        <label>@item.Name</label>
                    </td>
                    <td>
                        <label>@item.Description</label>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <label>Veri Bulunamadı</label>
                </td>
            </tr>
        }

    </tbody>
</table>

